# Meal Planner Backend - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# AI (required)
# =============================================================================

# Anthropic API key for Claude
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Model to use (optional, defaults to claude-sonnet-4-5-20250929)
MODEL_NAME=claude-sonnet-4-5-20250929

# =============================================================================
# Database (required)
# =============================================================================

# Supabase project URL
# Find in: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co

# Supabase publishable (anon) key - safe for client-side
SUPABASE_PUBLISHABLE_KEY=your-publishable-key

# Supabase secret (service role) key - backend only, bypasses RLS
SUPABASE_SECRET_KEY=your-secret-key

# =============================================================================
# Admin (optional)
# =============================================================================

# Secret for admin endpoints (workspace management, analytics)
ADMIN_SECRET=your-admin-secret

# =============================================================================
# OpenAI (optional - for embeddings)
# =============================================================================

# OpenAI API key for recipe embeddings (semantic search)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# =============================================================================
# Linear Integration (optional - for feedback issues)
# =============================================================================

# Linear API key for automatic issue creation from user feedback
# Get it from: Linear Settings > API > Personal API keys
LINEAR_API_KEY=lin_api_your_key_here

# Team ID (UUID from Linear)
LINEAR_TEAM_ID=

# Project ID (optional - routes issues to specific project)
LINEAR_PROJECT_ID=

# Label ID (optional - tags issues with a label like "feedback")
LINEAR_LABEL_ID=

# Assignee ID (optional - auto-assign issues to a user)
LINEAR_ASSIGNEE_ID=
